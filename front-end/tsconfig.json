{
	"compilerOptions": {
		"jsx": "react-jsxdev",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"target": "ES6",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
	},
	"include": ["src", "src/__tests__", "mocks", "setupTests.ts"]
}
